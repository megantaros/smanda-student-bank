<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/login_icon" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Login"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="15dp"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/ed_nis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/ic_nis"
            android:drawableTint="@color/dark_color"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat_semi"
            android:hint="Nomor Induk Siswa"
            android:includeFontPadding="true"
            android:inputType="number"
            android:padding="16dp"
            android:textColor="@color/dark_color"
            android:textColorHint="@color/gray_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat_semi"
            android:drawableTint="@color/dark_color"
            android:hint="Password"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/dark_color"
            android:textColorHint="@color/gray_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="@drawable/btn_primary"
            android:backgroundTint="@color/success_color"
            android:fontFamily="@font/font_primary"
            android:text="Masuk"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:elevation="8px"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>